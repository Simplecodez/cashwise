style.
      body {
        font-family: Roboto, Arial, sans-serif;
        background-color: #ffffff;
        color: #333333;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .container {
        max-width: 400px;
        width: 100%;
        padding: 20px;
        border: 1px solid #dddddd;
        border-radius: 10px;
        background-color: #ffffff;
        text-align: center;
      }
      .header {
        border-radius: 10px 10px 0 0;
        padding: 20px 0;
        padding-left: 20px;
        display: flex;
        justify-content: center; 
        align-items: center;
        gap: 20px; 
        margin-bottom: 20px;
      }

      .header img {
        width: 100%; 
        height: auto;
      }

      .otp-box {
        background-color:  #C010100A;
        padding: 30px 0;
        margin: 20px 0;
        border-radius: 10px;
        font-size: 36px;
        font-weight: bold;
        color: #1cdaff;
        letter-spacing: 10px;
        line-height: 46.88px;
      }
      
      .message1, .message2 {
        font-size: 16px;
        margin: 30px 0;
        text-align: center;
        padding: 0 40px;
        line-height: 18.75px;
      }

      .message2{
        margin: 40px 0;
      }

      .message1 span {
        color: #1cdaff;
        font-weight:bold
      }

      .message2 span {
        font-weight: bold;
        color: #d32f2f;
      }

      .warning {
        background: #FAFAFA;
        font-size: 15px;
        margin-top: 10px;
        height:auto;
        line-height: 14.58px;
        padding: 10px;
      }

      .warning a {
        color: #d32f2f;
        text-decoration: none;
        font-weight: bold;
      }